{
  "lsp": {
    "tailwindcss-language-server": {
      "settings": {
        "includeLanguages": {
          "rust": "html",
        },
        "experimental": {
          "classRegex": [
            "class=\"([^\"]*)",
            "class={\"([^\"}]*)",
            "class=format!({\"([^\"}]*)",
          ],
        },
      },
    },
    "rust-analyzer": {
      "initialization_options": {
        "cargo": {
          "allFeatures": true,
        },
        "check": {
          "features": "all",
        },
        "diagnostics": {
          "experimental": {
            "enable": true,
          },
        },
        "hover": {
          "actions": {
            "enable": true,
          },
        },
        "procMacro": {
          "enable": true,
          "ignored": {
            "leptos-macro": ["server"],
          },
        },
        "typing": {
          "autoClosingAngleBrackets": {
            "enable": true,
          },
        },
        "rustfmt": {
          "overrideCommand": [
            "leptosfmt",
            "--stdin",
            "--rustfmt",
            "--experimental-tailwind",
          ],
        },
      },
    },
  },
}
